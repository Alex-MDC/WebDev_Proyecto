  <div class="container" style="background-color: rgba(212, 212, 212, 0.945); margin-top: .65em;">
    <div class="game-cover">
         <!-- nombre del parametro-->
        <!-- valor del parametro del api-->
            
        <img class = "Game-image" src= <%= url %> >
    
    </div>
    <div class="game-data" style="border-color: black; border-style: solid; border-width: 0px 0px 0px 2px;">
       
        <!-- nombre del parametro-->
        <h1 style="border-color: black; border-style: solid; border-width: 0px 0px 2px 0px; padding-left: 0.5em;">Rating
        </h1>
        <!-- valor del parametro del api-->
            <% if (gameData[0].rating == undefined) { %>
                <p style="padding-left: 1em;">
                    Rating pending. 
                </p>
                
            <% } else { %>
                <p style="padding-left: 1em;">
                    <%= (gameData[0].rating).toFixed(2)  %>
                </p>
            <% } %>
        <!-- nombre del parametro-->
        <h1 style="border-color: black; border-style: solid; border-width: 0px 0px 2px 0px; padding-left: 0.5em;">Description
        </h1>
        <!-- valor del parametro del api-->
            <p style="padding-left: 1em;">
                <%= gameData[0].summary %>
            </p>
                        
      </div>
    </div>
  </div>
